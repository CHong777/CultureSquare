<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="prboard.dao.face.PRBoardDao">
	
	<select id="updatePRCnt"
	 parameterType="String">
		UPDATE user_table SET prcnt = 0 
		WHERE 1=1
		AND usernick =#{value}
	</select>
	
	<select id="selectprCnt" parameterType="String"
		resultType="user.dto.User_table">
		SELECT prcnt FROM user_table
		WHERE 1=1
		AND usernick =#{value}
	</select>

</mapper>